{
    "name": "@statetemplate/client",
    "version": "1.0.0",
    "description": "Browser client library for StateTemplate real-time updates",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c",
        "build:clean": "rm -rf dist && npm run build",
        "dev": "rollup -c -w",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:e2e": "jest --testPathPattern=e2e",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist",
        "prepublishOnly": "npm run clean && npm run build"
    },
    "keywords": [
        "realtime",
        "template",
        "websocket",
        "morphdom",
        "html-patching",
        "dom-updates"
    ],
    "author": "StateTemplate Team",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/jest": "^29.5.12",
        "@types/morphdom": "^2.3.6",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "rimraf": "^5.0.5",
        "rollup": "^4.9.6",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "morphdom": "^2.7.2",
        "tslib": "^2.8.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/livefir/statetemplate.git",
        "directory": "client"
    },
    "bugs": {
        "url": "https://github.com/livefir/statetemplate/issues"
    },
    "homepage": "https://github.com/livefir/statetemplate#readme"
}

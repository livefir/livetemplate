{{/* Profile template for user information */}}
<div class="profile">
    {{with .User}}
    <div class="profile-header">
        <h2>{{.Name}}</h2>
        {{if .Email}}
        <p class="email">{{.Email}}</p>
        {{end}}
    </div>
    <div class="profile-details">
        {{if .Bio}}
        <div class="bio">
            <h3>About</h3>
            <p>{{.Bio}}</p>
        </div>
        {{end}}
        {{if .Skills}}
        <div class="skills">
            <h3>Skills</h3>
            <ul>
                {{range .Skills}}
                <li>{{.}}</li>
                {{end}}
            </ul>
        </div>
        {{end}}
    </div>
    {{else}}
    <p>No user information available</p>
    {{end}}
</div>
